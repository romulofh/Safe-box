<h1>Cadastre sua conta</h1>

<div class="panel-body">

<%= form_for @account do |f| %>
    <div class="form-group">
        <%= f.label :number %>
        <%= f.text_field :number, autofocus: true, class: 'form-control' %>
    </div>

    <div class"form group">
        <%= f.label :agency %>
        <%= f.select :agency, ['Bradesco', 'Caixa', 'Santander', 'Banco do Brasil'], {}, class: 'form-control' %>
    </div></br>

    <div class"form group">
        <%= f.label :account_type %>
        <%= f.select :account_type, ['Conta Corrente', 'PoupanÃ§a'], {}, class: 'form-control' %>
    </div></br>

    <div class="form-group">
        <%= f.label :balance %>
        <%= f.number_field :balance, class: 'form-control', :step => "0.01" %>
    </div>

    <%= f.submit class: 'btn btn-primary' %>
<% end %>
</div>
