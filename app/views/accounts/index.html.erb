<h1>Minhas Contas</h1>

<body>

    <% @accounts.each do |account| %>
        <% if current_user.id == account.user_id %>
            <div class="card-custom">
            
            <div class="card-body padding-custom">
                <h5 class="card-title"><b>Número:</b> <%= account.number %></h5>
                <p class="card-text"><b>Agência:</b> <%= account.agency %> </p>
                <p class="card-text"><b>Saldo:</b> R$ <%= account.balance %> </p>
                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModalCenter">
                    Depósito
                </button>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModalCenter">
                    Saque
                </button>
                <%= link_to "Detalhes", account_path(account), :class=>"btn btn-primary" %>
            </div>
            </div></br>
        <% end %>
    <% end %>

    <!-- MODAL DEPÓSITO -->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalCenterTitle">Depósito</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="input-group">
                <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)">
                <div class="input-group-append">
                    <span class="input-group-text">$</span>
                    <span class="input-group-text">0.00</span>
                </div>
                </div>                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Finalizar Operação</button>
            </div>
            </div>
    </div>
</div>

</body>